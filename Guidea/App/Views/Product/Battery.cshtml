
@{
    ViewData["Title"] = "Battery";
}
<div class="container product-container">  
    <h3>Батерии 18650</h3>
    <div class="card-deck ">
        <div class="card">
            <a class="card-link" asp-area="" asp-controller="BatteryType" asp-action="BatteryCell">
                <div class="card-body" id="battery-image">
                </div>
                <div class="card-footer">
                    <small class="text-muted">Клетки батерии 18650</small>
                </div>
            </a>
        </div>
        <div class="card">
            <a class="card-link" asp-area="" asp-controller="BatteryType" asp-action="BatteryPack">
                <div class="card-body" id="battery-pack-image">
                </div>
                <div class="card-footer">
                    <small class="text-muted">Пекти за батерии-цели батерии</small>
                </div>
            </a>
        </div>
        <div class="card">
            <a class="card-link" asp-area="" asp-controller="BatteryType" asp-action="BatteryRepair">
                <div class="card-body" id="battery-repair-image">
                </div>
                <div class="card-footer">
                    <small class="text-muted">Ремонт акумулаторни батерии</small>
                </div>
            </a>
        </div>

        <div class="card">
            
        </div>
    </div>
</div>
