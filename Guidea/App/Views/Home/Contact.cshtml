        <form name="enq" method="post" action="email/" onsubmit="return validation();">
            <h3> Форма за контакт и поръчка</h3>
            <div class="form-group">
                <label for="exampleInputName1">Име</label>
                <input type="text" name="name" class="form-control-contant-information" id="exampleInputName1" placeholder="Enter name">
            </div>
            <div class="form-group">
                <label for="exampleTelephoneNumber">Телефонен номер</label>
                <input type="text" name="name" class="form-control-contant-information" id="exampleTelephoneNumber" placeholder="Enter phone">
            </div>
        </form>
        <form role="form">
            <div class="form-group">
                <label for="exampleInputEmail1">Електронен адрес</label>
                <input type="text" name="email" class="form-control-contant-information" id="exampleInputEmail1" placeholder="Enter email">
            </div>
        </form>
        <form role="form">
            <div class="form-group">
                <label for="exampleInputMessage1">Съобщение</label>
                <textarea name="message" class="form-control-contant-information" input rows="3" placeholder="Enter message"></textarea>
            </div>

            <div class="actions">
                <input type="submit" value="Изпрати" name="submit" id="submitButton" class="btn btn-info pull    -right" title="Click here to submit your message!" />
            </div>
        </form>

    </fieldset>

