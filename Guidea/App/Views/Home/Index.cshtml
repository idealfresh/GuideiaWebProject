    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/CaroselImages/bikeInMountain.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                For Nature
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/CaroselImages/scooter.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                For Nature
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/CaroselImages/CarWindow.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                For Nature
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/CaroselImages/Magnets.jpg" alt="Forth slide">
            <div class="carousel-caption d-none d-md-block">
                For Nature
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
